{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
